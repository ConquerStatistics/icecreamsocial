

<html>
  <head>
    <title>Ics</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  

<div class="card text-center" style="width: 45rem;">
  <img src="/images/ics.jpg" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">Add an Ice Cream!</h5>
    <p class="card-text"> We would love for you to rate your favorite ice creams :)</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>
<table>
  <thead>
    <tr>
      <th>Ice Cream Name:</th>
      <th>Flavor: 0-50</th>
      <th>Presentation: 0-10</th>
      <th>Color/Appearance: 0-10</th>
      <th>Aroma: 0-10</th>
      <th>Texture: 0-20</th>
    </tr>
  </thead>

  <tbody>
    <% @icecreams.each do |icecream| %>
      <tr>
        <td><%= icecream.ice_cream %></td>
        <td><%= icecream.flavor %></td>
        <td><%= icecream.presentation %></td>
        <td><%= icecream.color_appearance %></td>
        <td><%= icecream.aroma %></td>
        <td><%= icecream.texture %></td>
      </tr>
    <% end %>
  </tbody>
</table>
